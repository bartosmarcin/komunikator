<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_action_person"
        android:id="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:paddingTop="8dp"
        android:ems="10"
        android:hint="Email"
        android:id="@+id/edit_email"
        android:layout_below="@+id/edit_nickname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:id="@+id/edit_group"
        android:hint="Group"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignRight="@+id/edit_nickname"
        android:layout_alignEnd="@+id/edit_nickname"
        android:maxLines="3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name Surname"
        android:id="@+id/edit_name_surname"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edit_group"
        android:layout_alignStart="@+id/edit_group"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLines="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_nickname"
        android:layout_below="@+id/edit_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nickname"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/edit_email"
        android:layout_alignEnd="@+id/edit_email"
        android:maxLines="1" />

</RelativeLayout>